<h1 class="heading">
  Edit event
</h1>
<div>
  <%= form_for @event do |f|%>
      <div>
        <%= f.label "Date" %>
        <span>
        <%= f.label @event.errors[:date].first || " ", class: "error" %>
      </span>
        <%= f.date_field :date %>
      </div>

      <div>
        <%= f.label "From" %>
        <span>
        <%= f.label @event.errors[:start_time].first || " ", class: "error" %>
      </span>
        <%= f.text_field :start_time, class: "time_picker" %>
      </div>

      <div>
        <%= f.label "To" %>
        <span>
        <%= f.label @event.errors[:end_time].first || " ", class: "error" %>
      </span>
        <%= f.text_field :end_time, class: "time_picker" %>
      </div>

      <div>
        <%= f.label "Event Name" %>
        <span>
        <%= f.label @event.errors[:name].first || " ", class: "error" %>
      </span>
        <%= f.text_field :name %>
      </div>

      <div>
        <%= f.label "Event Description" %>
        <span>
        <%= f.label @event.errors[:description].first || " ", class: "error" %>
      </span>
        <%= f.text_field :description %>
      </div>

      <%= f.hidden_field :user_id %>
      <%= f.submit %>
      <%= link_to "Cancel", :back %>
  <% end %>
</div>
<%= content_for :custom_js do %>
    <script type="text/javascript">
        $(document).ready(function () {
            $('.time_picker').datetimepicker({
                pickDate: false
            });
        });
    </script>
<% end %>
