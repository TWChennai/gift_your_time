<nav class="top-bar" data-options="is_hover: false" data-topbar>
  <ul class="title-area">
    <h1>
     <a href= '/' class="nav-item-text">
       <%= image_tag asset_path('clock.png'), :class => "logo" %>
       Gift your Time
     </a>
   </h1>
   <li class="toggle-topbar menu-icon"><a href="#"></a></li>
 </ul>
 <section class="top-bar-section">
  <ul class="right">
    <li class="has-form">
      <div class="row collapse">
        <%= form_tag :search, :method => :get do %>
        <%= text_field_tag :query, params[:query], :placeholder => "Search an event", :id => "search-text"%>
        <% end %>
      </div>
    </li>

    <li class="divider"></li>
    <% if user_signed_in? %>
      <li class="has-dropdown">
        <a href="#"><%= current_user.name %></a>
        <ul class="dropdown">
          <li><%= link_to "Events History", history_url %></li>
          <li><%= link_to "Change Password", edit_user_registration_url %></li>
          <li><%= link_to "Logout", destroy_user_session_path, method: :delete%></li>
        </ul>
      </li>
    <% else %>
    <li class="has-form">
      <%= link_to "Login", new_user_session_path, class: 'button' %>
    </li>
    <li class="divider"></li>
    <li class="has-form">
      <%= link_to "Register", new_user_registration_path, class: 'button' %>
    </li>
    <% end %>
  </ul>
</section>
</nav>